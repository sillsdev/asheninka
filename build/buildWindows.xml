<?xml version="1.0" encoding="UTF-8"?>
<project name="SyllableParser" default="do-deploy" basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="." />
				<file name="${java.home}\..\lib\ant-javafx.jar" />
				<file name="${java.home}\lib\jfxrt.jar" />
				<file name="${basedir}" />
			</filelist>
		</path>


		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpathref="fxant" />
	</target>
	<target name="setup-staging-area">
		<delete dir="doc" />
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />

		<mkdir dir="externalLibs" />
		<copy todir="externalLibs">
			<fileset dir="../ControlsFX">
				<include name="controlsfx-8.40.9.jar" />
				<include name="controlsfxLicense.txt" />
			</fileset>
			<fileset dir="../diff-match-patch">
				<include name="diff-match-patch.jar" />
				<include name="diff-match-patchCOPYING" />
				<include name="diff-match-patchREADME.txt" />
			</fileset>
		</copy>

		<mkdir dir="doc" />
		<copy todir="doc">
			<fileset dir="../doc">
				<include name="Overview.pdf" />
			</fileset>
		</copy>

		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="..">
				<include name="src/**" />
			</fileset>
		</copy>

		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />

		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="controlsfx-8.40.9.jar" />
				<include name="controlsfxLicense.txt" />
				<include name="diff-match-patch.jar" />
				<include name="diff-match-patchCOPYING" />
				<include name="diff-match-patchREADME.txt" />
			</fileset>
		</copy>

		<!-- Copy project references -->

		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*" />
			</fileset>
		</copy>

		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*" />
				</fileset>
			</classpath>
		</javac>

		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
			<fileset dir="project/src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>


	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist" />
		<delete file="deploy" />

		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>

		<mkdir dir="dist/doc" />
		<copy todir="dist/doc">
			<fileset dir="doc">
				<include name="*" />
			</fileset>
		</copy>

		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="SyllableParser.jar" />
			<fx:fileset dir="dist" includes="doc/**" />
			<fx:fileset dir="dist" includes="libs/*" />
			<fx:fileset dir="dist" includes="resources/**" />
		</fx:resources>

		<fx:application id="fxApplication" name="Asheninka Syllable Parser" mainClass="sil.org.syllableparser.MainApp" version="0.2.0.0" />

		<mkdir dir="build/classes/META-INF" />



		<fx:jar destfile="dist/SyllableParser.jar">
			<fx:application refid="fxApplication" />
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes" />

			<manifest>
				<attribute name="Implementation-Vendor" value="sil.org" />
				<attribute name="Implementation-Title" value="SyllableParser" />
				<attribute name="Implementation-Version" value="0.2.0.0" />
				<attribute name="JavaFX-Feature-Proxy" value="None" />
			</manifest>
		</fx:jar>


		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy embedJNLP="false" extension="false" includeDT="false" offlineAllowed="true" outdir="${basedir}/deploy" outfile="AsheninkaSyllableParser" nativeBundles="exe" updatemode="background">

			<fx:platform basedir="${java.home}">
				<fx:jvmarg value="-Xmx1024m" />
			</fx:platform>
			<fx:info title="Asheninka (a Syllable Parser)" vendor="SIL International" license="LGPL" copyright="Â© 2016 SIL International" description="A tool for exploring syllabification algorithms and for inserting discretionay hyphens in word lists." />

			<fx:application refId="fxApplication" />
			<fx:resources refid="appRes" />
			<fx:preferences shortcut="true" menu="true" install="true" />

		</fx:deploy>


	</target>
</project>
