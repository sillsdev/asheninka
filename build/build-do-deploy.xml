<?xml version="1.0" encoding="UTF-8"?>
<project name="build-do-deploy" default="..." basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<include file="${basedir}/build-init-fx-tasks.xml" as="nested"/>
	<include file="${basedir}/build-setup-staging-area.xml" as="nested"/>
	<include file="${basedir}/build-do-compile.xml" as="nested"/>

	<target name="do-deploy" depends="nested.setup-staging-area, nested.do-compile, nested.init-fx-tasks">
		<delete file="dist" />
		<delete file="deploy" />

		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>

		<mkdir dir="dist/doc" />
		<copy todir="dist/doc">
			<fileset dir="doc">
				<include name="*" />
			</fileset>
		</copy>

		<mkdir dir="dist/resources" />
	    <copy todir="dist/resources">
	      <fileset dir="../src/sil/org/syllableparser/resources">
	        <include name="**" />
	      </fileset>
	    </copy>

		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="SyllableParser.jar" />
			<fx:fileset dir="dist" includes="doc/**" />
			<fx:fileset dir="dist" includes="libs/*" />
			<fx:fileset dir="dist" includes="resources/**" />
		</fx:resources>

		<echo message="Passing processorType as:${processorType}"/>
		<fx:application id="fxApplication" name="Asheninka Syllable Parser${processorType}" mainClass="sil.org.syllableparser.MainApp" version="0.2.0.0" />

		<mkdir dir="build/classes/META-INF" />



		<fx:jar destfile="dist/SyllableParser.jar">
			<fx:application refid="fxApplication" />
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes" />

			<manifest>
				<attribute name="Implementation-Vendor" value="sil.org" />
				<attribute name="Implementation-Title" value="SyllableParser" />
				<attribute name="Implementation-Version" value="0.2.0.0" />
				<attribute name="JavaFX-Feature-Proxy" value="None" />
			</manifest>
		</fx:jar>


		<mkdir dir="deploy" />
		<echo message="Passing nativeBundles as:${nativeBundles}"/>
			<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy embedJNLP="false" extension="false" includeDT="false" offlineAllowed="true" outdir="${basedir}/deploy" outfile="AsheninkaSyllableParser" nativeBundles="${nativeBundles}" updatemode="background">

			<fx:platform basedir="${java.home}">
				<fx:jvmarg value="-Xmx1024m" />
			</fx:platform>
			<fx:info category="Education"
			title="Asheninka (a Syllable Parser)" vendor="SIL International" license="LGPL" copyright="Â© 2016 SIL International" description="A tool for exploring syllabification algorithms and for inserting discretionay hyphens in word lists." />

			<fx:application refId="fxApplication" />
			<fx:resources refid="appRes" />
			<fx:preferences shortcut="true" menu="true" install="true" />

		</fx:deploy>

		</target>
</project>